{% trans_default_domain 'ranky_media' %}

{% block ranky_media_file_manager_label %}
    {{ block('form_label') }}
{% endblock %}
{% block ranky_media_file_manager_widget %}
    {% apply spaceless %}
        <div class="ranky-media-form-type ranky-media-form-type--{{form.vars.name}} ranky-media-form-type--selection-{{- form.vars.multiple_selection ? 'multiple' : 'single' -}}"
             id="ranky-media-form-type-{{- form.vars.id -}}">
            <div class="ranky-media-form-type__label">
                {{ form_label(form) }}
            </div>
            <div class="ranky-media-form-type__help">
                {{ form_help(form) }}
            </div>
            <div class="ranky-media-form-type__content"
                 id="ranky-media-form-type__content-{{- form.vars.id -}}"
                 data-api-prefix="{{- form.vars.api_prefix ?? ranky_media_api_prefix ?? '' -}}"
                 data-field-id="{{- form.vars.id -}}"
                 data-title="{{- form.vars.modal_title -}}"
                 data-multiple-selection="{{- form.vars.multiple_selection -}}"
            >
            </div>
            {{- form_widget(form) -}}
            <div class="ranky-media-form-type__error">
                {{ form_errors(form) }}
            </div>
        </div>
    {% endapply %}
{% endblock %}
